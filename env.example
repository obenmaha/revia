# Configuration de l'application - Stack MVP 2025
VITE_APP_NAME=App-Kine
VITE_APP_VERSION=1.0.0

# Supabase Configuration (OBLIGATOIRE)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
VITE_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# API Configuration
VITE_API_TIMEOUT=10000

# External Services (Optionnel)
VITE_EMAIL_SERVICE_URL=https://api.emailservice.com
VITE_SMS_SERVICE_URL=https://api.smsservice.com

# Analytics (PostHog) - Optionnel
VITE_ANALYTICS_ENABLED=false
VITE_POSTHOG_KEY=your-posthog-key-here
VITE_POSTHOG_HOST=https://app.posthog.com
VITE_DEBUG_ANALYTICS=false

# Feature Flags
VITE_APP_MODE=cabinet
VITE_SPORT_MODE=false
VITE_CABINET_MODE=true
VITE_MOBILE_NAVIGATION=true
VITE_GAMIFICATION=true
VITE_GUEST_MODE=false

# Development
NODE_ENV=development
VITE_DEBUG=true
VITE_LOG_LEVEL=debug

# Production
# NODE_ENV=production
# VITE_DEBUG=false
# VITE_LOG_LEVEL=error
